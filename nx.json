{
  "implicitDependencies": {
    "package.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["docs-build", "build", "test:unit"]
      }
    }
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": false
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "^build:module"]
    },
    "build-only": {
      "dependsOn": ["^build", "^build:module"]
    },
    "docs-deploy": {
      "dependsOn": ["docs-build"]
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^test", "^build"]
    }
  }
}
